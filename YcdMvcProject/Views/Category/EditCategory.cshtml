@model EntityLayer.Concrete.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="w-50" style="padding:5rem;">
        <form asp-action="EditCategory" method="post">
            <div class="form-group">
                <label name="CategoryName">Category Name:</label>
                <div style="height:.5rem;"></div>
                <input name="CategoryName" value="@Model.CategoryName" class="form-control" />
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>
            <div style="height:1rem;"></div>
            <div class="form-group">
                <label name="CategoryDescription">Category Description:</label>
                <div style="height:.5rem;"></div>
                <input name="CategoryDescription" value="@Model.CategoryDescription" class="form-control" />
                <span class="text-danger" asp-validation-for="CategoryDescription"></span>
            </div>
            <div style="height:.5rem;"></div>
            <button class="btn btn-warning">Update Department</button>
        </form>
    </div>
</div>